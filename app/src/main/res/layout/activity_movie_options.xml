<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:scaleType="fitXY"
            android:layout_width="494dp"
            android:layout_height="225dp"
            app:srcCompat="@drawable/movieplaceholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVMovieTitleHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Movie Title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idTVMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/idTVMovieDurationHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Duration"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idTVMovieDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/age_ratingHeading"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="AgeRating"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/age_rating"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVMovieGenreHeading"
                android:layout_width="132dp"
                android:layout_height="wrap_content"

                android:padding="3dp"
                android:text="Genre"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idTVMovieGenre"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/idTVMovieDescriptionHeading"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="3dp"
            android:text="Description"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTVMovieDescription"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="3dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTVMoviePriceHeading"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:padding="3dp"
            android:text="Price"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTVMoviePrice"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:padding="3dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rent_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Rent Movie" />

            <Button
                android:id="@+id/rate_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Rate Movie" />

            <Button
                android:id="@+id/return_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:text="Return Movie" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>