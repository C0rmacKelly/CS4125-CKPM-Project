<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMovies">

    <EditText
        android:id="@+id/idEdtMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Movie Title" />

    <EditText
        android:id="@+id/idEdtMovieDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Movie Duration" />

    <EditText
        android:id="@+id/idEdtMovieGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Movie Genre" />

    <EditText
        android:id="@+id/idEdtMovieDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Movie Description" />

    <EditText
        android:id="@+id/idEdtMoviePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Movie Price" />

    <Button
        android:id="@+id/idBtnAddMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Movie"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnReadMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="View Available Movies"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idCustomersInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="View Customer Info"
        android:textAllCaps="false" />

</LinearLayout>